<div class="card">
  <div class="card-header">
    <h2><%= @user.name %></h2>
  </div>
  <div class="card-body">
    <p><strong>Email:</strong> <%= @user.email %></p>

    <% if @user.image.attached? %> <!-- Suponiendo que usas Active Storage para imágenes -->
      <div class="mb-3">
        <%= image_tag @user.image, class: 'img-fluid' %> <!-- Muestra la imagen del usuario -->
      </div>
    <% end %>

    <% if current_user&.admin? %>
      <%= link_to 'Editar', edit_user_path(@user), class: 'btn btn-warning' %>
      <%= link_to 'Eliminar', user_path(@user), method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn btn-danger' %>
    <% end %>

    <br/>
    <%= link_to 'Volver', users_path, class: 'btn btn-secondary' %>
  </div>
</div>